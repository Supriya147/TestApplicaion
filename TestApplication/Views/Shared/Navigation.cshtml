
@{

    @Html.Hidden("CreateEmp", Url.Action("CreateEmp", "Test"))
    @Html.Hidden("ModifyEmp", Url.Action("ModifyEmp", "Test"))
    @Html.Hidden("EmployeeList", Url.Action("getEmplistPartial", "Test"))
    @Html.Hidden("DefaultQuick", Url.Action("DefaultQuick", "Test"))
}
<div class="scrollbar-sidebar">
    <div class="app-sidebar__inner">
        <ul class="vertical-nav-menu">

            <li class="app-sidebar__heading">Operation</li>
            <li id="firstli">
                <a href="#">
                    <i class="metismenu-icon pe-7s-diamond"></i>
                    Employee
                    <i class="metismenu-state-icon pe-7s-angle-down caret-left"></i>
                </a>
                <ul>

                    <li>
                        <a id="mnuAddEmp" href="#">
                            <i class="metismenu-icon">
                            </i>Add New Employee
                        </a>
                    </li>
                    <li>
                        <a id="mnuEmpList" href="#">
                            <i class="metismenu-icon">
                            </i>Employees
                        </a>
                    </li>

                </ul>
            </li>


        </ul>
    </div>
</div>

<script>
    $(document).ready(function () {
        $.ajaxSetup({
            beforeSend: function (xhr) {
                xhr.setRequestHeader("RequestVerificationToken",
                    $('input:hidden[name="__RequestVerificationToken"]').val());
            },
        });
    });

    function resetMenus() {

        $("#displayquick").load($("#DefaultQuick").val());
        $('#RightSlidingWindow').removeAttr('class');
        $('#RightSlidingWindow').attr('class', 'ui-theme-settings');
        $("#mnuEmpList").removeClass("mm-active");
        $("#mnuAddEmp").removeClass("mm-active");
    }

    $('#mnuEmpList').on("click", function () {
        $("#myPartialViewContainer").load($("#EmployeeList").val() + "?MenuID=1");
        resetMenus();
        $("#mnuEmpList").addClass("mm-active");
    });


    $('#mnuAddEmp').on("click", function () {
        $("#myPartialViewContainer").load($("#CreateEmp").val() + "?MenuID=3");
        resetMenus();
        $("#mnuAddEmp").addClass("mm-active");
    });



</script>